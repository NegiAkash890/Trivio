    <div class="container-fluid">
        <div class="row ">
            <!-- <div class="col-3 d-none d-lg-block" id='adv1'>

            </div> -->
            <div class="offset-0 offset-md-1 col-md-4">
                <form class="needs-validation" id='form' action='/quiz/new' novalidate>
                    <div class="form-group">
                        <label for="imgupload">Image</label>
                        <input type="file" class="form-control form-control-lg" id="imgupload"><br>
                        <button id='mockbutton'>Click to upload Image</button>
                    </div>
                    <div class="form-group">
                        <label for="code">Quiz Code<span class="text-muted"> #</span></label>
                        <input type="text" class="form-control form-control-lg" id="code" required>
                        <div class="invalid-feedback">This field is required</div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <form class="needs-validation" action='/quiz/new' novalidate>
                    <div class="form-group">
                        <label for="quiz_topic">Quiz topic</label>
                        <input type="text" class="form-control form-control-lg" id="quiz_topic" required>
                        <div class="invalid-feedback">This field is required</div>
                    </div>
                    <div class="form-group">
                        <label for="quiz_describe">Description</label>
                        <textarea class="form-control form-control-lg"></textarea>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-6 col-md-4">
                                <label for="date">Date</label>
                                <input type="date" class='form-control form-control-lg' id="date" required>
                                <div class="invalid-feedback">This field is required</div>
                            </div>
                            <div class="col-6  col-md-4" id="datetime">
                                <label for='time'>Start Time</label>
                                <input type="time" class="form-control form-control-lg" required>
                                <div class="invalid-feedback">This field is required</div>
                            </div>
                            <div class="mt-3 mt-sm-0 col-md-4">
                                <label for='time_period'>Quiz Duration(Minutes)</label>
                                <input type="number" class="form-control form-control-lg" id='time_period' min="30"
                                    max="120" step="10" value="15" required>
                                <div class="invalid-feedback">This field is required</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6 mt-4">
                                <label for="time_choice">Time for answering one question</label>
                                <input type="number" class='form-control form-control-lg' id="time_choice"
                                    placeholder="seconds" min=10 max="30" value="10">
                            </div>
                            <div class="col-md-6">
                                <label for='time_review'>Time for reviewing correct answers for one question</label>
                                <input type="number" class="form-control form-control-lg" id="time_review"
                                    placeholder="seconds" min=10 max=30 value="15">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="btn-group text-center">
                            <div class="col-4">
                                <button type="reset" id="reset" class="btn btn-danger">CANCEL</button>
                            </div>
                            <div class="col-4">
                                <button type="submit" id="save" class="btn btn-success">SAVE</button>
                            </div>
                            <div class="col-4">
                                <button type="submit"  id='next' class="btn btn-primary">NEXT</button>
                            </div>

                        </div>
                    </div>
            </div>
        </div>

        </form>

    </div>
